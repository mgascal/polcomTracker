<div class="container">
  
  <div class="row">
    <div class="col-xs-12">
      <div class="clearSpace30"></div>
      <div class="pageTitle">Policy Comparison Tracking Apps</div>
      <div class="clearSpace30"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4"></div>

    <% if params[:error] == "yes" %> 
      <div class="col-xs-4 alert alert-danger">Incorrect Username / Password</div> 
    <% end %>

    <div class="col-xs-4"></div>
  </div>

  <div class="row">
    <div class="col-xs-4"></div>

    <div class="col-xs-4" style="border:1px solid #2c3e50; border-radius:6px;">
      <div class="clearSpace20"></div>
      <%= form_tag(sessions_path, {:class => "form-horizontal"}) do %>
        <div class="form-group">
          <%= label_tag :"Username : ", nil, :class => "col-xs-4 form-label" %>
          <div class="col-xs-8">
            <%= text_field_tag :username, params[:username], :class => "form-control" %>
          </div>
        </div> 
                    
        <div class="form-group">
          <%= label_tag :"Password : ", nil, :class => "col-xs-4 form-label" %>
          <div class="col-xs-8">
            <%= password_field_tag :password, params[:password], :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-xs-4"></div>
          <div class="col-xs-8">
            <%= submit_tag "Login", :class => "form-control btn btn-large btn-primary" %>
          </div>
        </div>    
      <% end %>
    </div>

    <div class="col-xs-4"></div>
  </div>

  <div class="clearSpace20">&nbsp;</div>

</div>